<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="5dp">

            <ImageView
                android:id="@+id/iv_list_hospital"
                android:layout_width="100dp"
                android:layout_height="80dp"/>

            <TextView
                android:id="@+id/tv_list_hospital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_list_hospital"
                android:layout_alignTop="@id/iv_list_hospital"
                android:paddingTop="3dp"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="18sp"
                android:textColor="@color/dark_gray"/>

            <TextView
                android:id="@+id/tv_list_hospital_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_list_hospital"
                android:layout_below="@id/tv_list_hospital"
                android:layout_marginTop="5dp"
                android:lines="2"
                android:ellipsize="end"
                android:textColor="@color/dark_gray"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>