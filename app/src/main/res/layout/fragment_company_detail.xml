<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">


            <ImageView
                    android:id="@+id/iv_company_detail"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/tv_company_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_company_detail"
                android:layout_alignTop="@id/iv_company_detail"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="@string/company_introduce"/>

            <TextView
                android:id="@+id/tv_company_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_company_detail"
                android:layout_below="@id/tv_company_detail_name"
                android:layout_marginTop="3dp"
                android:textColor="@color/dark_gray"
                android:textSize="14sp"
                android:text="类型"/>
            <TextView
                android:id="@+id/tv_company_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_company_detail"
                android:layout_below="@id/tv_company_type"
                android:layout_marginTop="3dp"
                android:textColor="@color/dark_gray"
                android:textSize="14sp"
                android:text="电话"/>

            <TextView
                android:id="@+id/tv_company_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_company_detail"
                android:layout_below="@id/tv_company_tel"
                android:layout_marginTop="3dp"
                android:textColor="@color/dark_gray"
                android:textSize="14sp"
                android:text="地址"/>

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:background="@color/background_tab_pressed"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:text="@string/company_introduce"/>

        <TextView
            android:id="@+id/tv_company_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textColor="@color/dark_gray"
            android:textSize="14sp"
            android:text="药店简介"/>

        <RelativeLayout
            android:id="@+id/rl_detail_toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_detail_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#000"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/arrow_down" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>