<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:baselineAligned="false"
    android:layout_marginBottom="5dip"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/ll_menu_item_setting"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:clickable="true">

        <ImageView
            style="@style/LeftMenuItemImageViewStyle"
            android:background="@drawable/left_menu_icon_setting" />

        <TextView
            style="@style/LeftMenuItemTextViewStyle"
            android:textSize="14sp"
            android:text="@string/left_menu_setting" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/ll_menu_item_exit"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:clickable="true">

        <ImageView
            style="@style/LeftMenuItemImageViewStyle"
            android:background="@drawable/left_menu_icon_exit" />

        <TextView
            style="@style/LeftMenuItemTextViewStyle"
            android:textSize="14sp"
            android:text="@string/left_menu_exit" />
    </LinearLayout>

</LinearLayout>